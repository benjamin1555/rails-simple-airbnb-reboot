<div class="container p-4">
  <div class="row">
    <div class="index-head">
      <h1>All our Flats</h1>
      <p>All <%= @flats.count %> flats.</p>
    </div>
  </div>

  <div class="row">
    <div class="flat-cards">
      <% @flats.each do |flat| %>
        <div class="flat-card shadow">
          <img src="<%= flat.flat_picture %>" alt="flat picture">
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
              <p><%= flat.address %></p>
            </div>

            <div class="flat-card-numbers">
              <i class="fas fa-user-friends mr-1"></i>
              <%= flat.number_of_guests %>
              <i class="fas fa-euro-sign ml-4 mr-1"></i>
              <%= flat.price_per_night %>
            </div>
          </div>

          <div class="flat-card-bottom">
            <%= link_to 'More info', flat_path(flat)%>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'text-warning' %>
            <%= link_to 'Remove', flat_path(flat),
                         method: :delete,
                         data: { confirm: 'Are you sure?' },
                         class: 'text-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


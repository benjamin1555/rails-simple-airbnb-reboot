<div class="container mt-4">
  <div class="row col-6 m-auto">
    <div class="flat-form  w-100">
      <h1>Add a new Flat</h1>
      <div class="mt-3">
        <%= simple_form_for @flat do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :flat_picture %>
          <%= f.input :description %>
          <input type="range" name="flat[price_per_night]" id="flat_price_per_night" value="125" min="1" max="250" oninput="priceOutputId.value = flat_price_per_night.value">
          <output name="priceOutput" id="priceOutputId">125</output>â‚¬
          <%= f.input :number_of_guests, collection: 1..5 %>
          <%= f.submit 'Edit Flat', class: "btn btn-primary" %>
          <%= link_to 'Cancel', flat_path(@flat), class: "btn btn-danger ml-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
